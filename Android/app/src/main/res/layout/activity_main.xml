<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/llmyactionbar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/client_logo"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_toRightOf="@id/icon"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            />
        <Button
            android:id="@+id/btSetting"
            android:background="@drawable/setting_icon"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <org.easydarwin.easyclient.view.PagerSlidingTabStrip
        android:id="@+id/main_pager_tab"
        android:layout_below="@id/llmyactionbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_pager_tab"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
